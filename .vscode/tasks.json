{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Launch Earth Saver Game",
			"type": "shell",
			"command": "start index.html",
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Start Development Server (Auto-Open Browser)",
			"type": "shell",
			"command": "python config/server.py",
			"isBackground": false,
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new",
				"showReuseMessage": false
			},
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Start Basic HTTP Server",
			"type": "shell",
			"command": "python -m http.server 8000",
			"isBackground": true,
			"problemMatcher": [],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		}
	]
}